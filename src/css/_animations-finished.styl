.order-enter
  transform: translateX(-120%)
  transition 5s
  max-height 0
  padding 0 !important
  &.order-enter-active
  	max-height 60px
  	transform: translateX(0)
  	padding 2rem 0 !important

.order-exit
  transition 5s
  transform: translateX(0)
  &.order-exit-active
    transform: translateX(120%)
    padding: 0

.count-enter
  background: red
  transition 5s
  transform translateY(0)
  transition 5s
  postion absolute
  left 0
  bottom 0
  &.count-exit-active
  	background green
  	transform translateY(-100%)
